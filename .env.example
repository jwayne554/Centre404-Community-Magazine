# Copy this file to .env.local and fill in your values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/community_magazine"

# Authentication
JWT_SECRET="generate-a-secure-random-string"
JWT_REFRESH_SECRET="generate-another-secure-random-string"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Media Storage (Cloudinary - Required for production)
# Get your CLOUDINARY_URL from: https://cloudinary.com/console
# Format: cloudinary://API_KEY:API_SECRET@CLOUD_NAME
# If not set, files are stored locally in /public/uploads/ (dev only)
CLOUDINARY_URL="cloudinary://123456789012345:abcdefghijklmnopqrstuvwxyz@your-cloud-name"

# Railway
RAILWAY_ENVIRONMENT="development"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Centre404 Community Magazine"

# Email Service (Not implemented - for future use)
# EMAIL_FROM="noreply@yourdomain.com"
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-specific-password"

# Security (Not implemented - rate limiting uses hardcoded values)
# CORS_ORIGIN="http://localhost:3000"
# RATE_LIMIT_WINDOW_MS="900000"
# RATE_LIMIT_MAX_REQUESTS="100"

# Feature Flags (Not implemented - for future use)
# ENABLE_AUDIO_UPLOAD="true"
# ENABLE_DRAWING_TOOL="true"
# ENABLE_EMAIL_NOTIFICATIONS="false"
# MAX_FILE_SIZE_MB="10"  # Currently hardcoded in upload endpoint
# MAX_TEXT_LENGTH="5000"  # Currently hardcoded in Zod schema

# Text-to-Speech (Unreal Speech - Optional)
UNREAL_SPEECH_API_KEY="your-unreal-speech-api-key"
NEXT_PUBLIC_ENABLE_PREMIUM_TTS="true"